                	label="COM_JEA_EXPORT_FTP_PASSWORD_LABEL"
                	description="COM_JEA_EXPORT_FTP_PASSWORD_DESC"
                	size="50"
                	class="inputbox"
                	default=""
                />
                <field
                	name="ftp_address"
                	type="text"
                	label="COM_JEA_EXPORT_FTP_ADDRESS_LABEL"
                	description="COM_JEA_EXPORT_FTP_ADDRESS_DESC"
                	size="40"
                	class="inputbox"
                	readonly="true"
                />                	
