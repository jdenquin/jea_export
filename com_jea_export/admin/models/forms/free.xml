                        class="inputbox"
                        default=""
                        readonly="true"
                />
                <field
                	name="code_agence"
                	type="text"
                	label="COM_JEA_EXPORT_CODE_AGENCE_LABEL"
                	description="COM_JEA_EXPORT_CODE_AGENCE_DESC"
